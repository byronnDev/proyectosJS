<div class="container">
	<h1>Proyectos <span>100%</span></h1>
</div>

<style>
	.container {
		min-height: 100vh;
		display: flex;
		justify-content: flex-start;
		align-items: center;
		padding: 2rem;
		padding-left: 35%;
        position: relative;
        overflow: hidden;
        z-index: 1;
        }

        .container::before {
            content: '';
            position: absolute;
            width: 300px;
            height: 300px;
            background: #ffd700;
            border-radius: 50%;
            filter: blur(100px);
            opacity: 0.3;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1;
	}

	div {
		background: linear-gradient(45deg, #0a0a0a, #666666);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	h1 {
		font-size: clamp(2rem, 5vw, 3.5rem);
		text-align: left;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	span {
		font-size: clamp(3rem, 8vw, 6rem);
		position: relative;
		font-weight: 900;
        background-image: linear-gradient(45deg, #ffd700, #ff9900);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	span::after {
		content: '';
		width: clamp(100px, 20vw, 250px);
		height: clamp(100px, 20vw, 250px);
		rotate: 5deg;
		border-radius: 15px;
		background-image: url('/src/assets/js.svg');
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		position: absolute;
		left: 100%;
		top: 50%;
		transform: translateY(-60%);
	}
</style>