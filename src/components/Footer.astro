---
// Importa tus iconos aquí según la librería que uses
import { FaGithub, FaLinkedin, FaXTwitter } from 'react-icons/fa6';
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="social-links">
        <a href="https://github.com/byronnDev" target="_blank" rel="noopener" aria-label="GitHub" title="Ver codigo fuente">
            <FaGithub />
        </a>
        <a href="https://linkedin.com/in/mikel-echeverria" target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
            <FaLinkedin />
        </a>
        <a href="https://x.com/MikelEcheve" target="_blank" rel="noopener" aria-label="Twitter" title="X/Twitter">
            <FaXTwitter />
        </a>
    </div>
    <p>&copy; {currentYear}
        <a href="https://mikeldev.com" target="_blank" rel="noopener" aria-label="Mikel Echeverria" class="author" title="Ir a mikeldev.com">
            Mikel Echeverria
        </a>
    </p>
</footer>

<style>
    footer {
        margin-top: 2rem;
        padding: 1.5rem;
        text-align: center;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
    }

    .author {
        text-decoration: none;
        color: #666;
        transition: color 0.3s ease;
        position: relative;
    }

    .author::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #ffd700;
        transition: width 0.5s ease-out;
    }

    .author:hover::after {
        width: 100%;
    }

    .author:hover {
        color: #ffd700;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    a {
        color: #666;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    a:hover {
        color: #ffd700;
        transform: scale(1.2);
    }

    p {
        color: #666;
        font-size: 0.9rem;
    }

    svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    @media (max-width: 768px) {
        footer {
            padding: 1rem;
            backdrop-filter: blur(10px);
        }

        .social-links {
            gap: 1rem;
        }

        svg {
            width: 1.2rem;
            height: 1.2rem;
        }
    }
</style>
