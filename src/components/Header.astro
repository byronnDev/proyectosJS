    }

    .nav-button:hover {
        border: 1px solid #ffd700;
        background: linear-gradient(45deg, #ffd700, #ff9900);
		color: #fff;
		transform: translateY(-2px);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    svg {
        width: 20px;
        height: 20px;
    }

    @media (max-width: 768px) {
        .buttons-container {
            position: static; /* Cambiar a posición estática en móviles */
            justify-content: center;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .nav-button {
            padding: 0.5rem;
            font-size: 0.9rem;
        }
