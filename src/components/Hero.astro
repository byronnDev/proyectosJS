---
import BotonBajar from './BotonBajar.astro';
import Content from './Content.astro';
import Presentation from './Presentation.astro';
import SocialButtons from './SocialButtons.astro';
---
<div class="container">
	<Content />
	<Presentation />
	<SocialButtons />
	<BotonBajar />
</div>

<style>
	.container {
		min-height: 90vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		position: relative;
		overflow: hidden;
		z-index: 1;
		padding: 2rem;
		background: radial-gradient(circle at center, rgba(255, 255, 0, 0.15) 0%, transparent 70%);
	}

	@media (max-width: 768px) {
		.container {
			margin-top: 2rem;
		}
	}
</style>
